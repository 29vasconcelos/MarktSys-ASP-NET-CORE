@model IEnumerable<MarktSys_ASP_NET_CORE.Models.Unidade>

@{
    ViewData["Title"] = "Unidades";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

    <script>
        $(document).ready( function () {
        $('#unidades').DataTable();
    } );
    </script>

<p>
    <a asp-controller="Administrativo" asp-action="NovaUnidade" class="btn btn-success">Criar nova unidade</a>
</p>
<table class="table" id="unidades">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Simbolo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Simbolo)
            </td>
            <td>
                @Html.ActionLink("Editar", "EditarUnidade", new { item.Id }, new { @class = "btn btn-warning" })
                <form asp-controller="Unidade" asp-action="Inativar" method="post" style="display: inline">
                    <input name="id" value="@item.Id" class="form-control" hidden />
                    <input type="submit" value="Excluir" class="btn btn-danger" onclick="return confirm('Você tem certeza que deseja fazer essa exclusão?');" />
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
