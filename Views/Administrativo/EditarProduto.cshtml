@model MarktSys_ASP_NET_CORE.DTO.ProdutoDTO

@{
    ViewData["Title"] = "Editar Produto";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <form class="form-horizontal" asp-controller="Produto" asp-action="Editar" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoriaID" class="control-label"></label>
                <select asp-for="CategoriaID" class="form-control" asp-items='@(new SelectList(@ViewBag.Categorias, "Id", "Nome"))'></select>
                <span asp-validation-for="CategoriaID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FornecedorID" class="control-label"></label>
                <select asp-for="FornecedorID" class="form-control" asp-items='@(new SelectList(@ViewBag.Fornecedores, "Id", "Nome"))'></select>
                <span asp-validation-for="FornecedorID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecoCustoString" class="control-label"></label>
                <input asp-for="PrecoCustoString" type="number" step="0.01" min="0" class="form-control" value="@Model.PrecoCusto.ToString().Replace(",", ".")" />
                <span asp-validation-for="PrecoCustoString" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecoVendaString" class="control-label"></label>
                <input asp-for="PrecoVendaString" type="number" step="0.01" min="0" class="form-control" value="@Model.PrecoVenda.ToString().Replace(",", ".")" />
                <span asp-validation-for="PrecoVendaString" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnidadeID" class="control-label"></label>
                <select asp-for="UnidadeID" class="form-control" asp-items='@(new SelectList(@ViewBag.Unidades, "Id", "Nome"))'></select>
                <span asp-validation-for="UnidadeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Atualizar produto" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Produtos" asp-controller="Administrativo">Voltar à lista</a>
</div>

