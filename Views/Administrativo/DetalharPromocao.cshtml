@model MarktSys_ASP_NET_CORE.Models.Promocao

@{
    ViewData["Title"] = "Detalhar Promoção";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div>
    <h4>Promocao @Model.Id.ToString("Nº 000000") </h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PercentualDesconto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PercentualDesconto)%
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataInicio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataInicio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataFinal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataFinal)
        </dd>
        <dt class="col-sm-2">
            Produtos em Promoção:
        </dt>
        <dd class="col-sm-12">
            <table class="table" id="produtos">
                <thead>
                    <tr>
                        <th>
                            ID
                        </th>
                        <th>
                            Nome
                        </th>
                        <th>
                            Preço Normal
                        </th>
                        <th>
                            Preço com Desconto
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.PromocaoProdutos.ToList()) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Produto.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Produto.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Produto.PrecoVenda)
                        </td>
                        <td>
                            @(item.Produto.PrecoVenda * (1 - Convert.ToDouble(Model.PercentualDesconto) / 100))
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-controller="Administrativo" asp-action="Promocoes">Voltar à lista</a>
</div>
