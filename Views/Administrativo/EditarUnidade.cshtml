@model MarktSys_ASP_NET_CORE.DTO.UnidadeDTO

@{
    ViewData["Title"] = "Editar Unidade";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row">
    <div class="col-md-4">
        <form class="form-horizontal" asp-controller="Unidade" asp-action="Editar" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Simbolo" class="control-label"></label>
                <input asp-for="Simbolo" class="form-control" />
                <span asp-validation-for="Simbolo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Atualizar unidade" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Unidades" asp-controller="Administrativo">Voltar à lista</a>
</div>

